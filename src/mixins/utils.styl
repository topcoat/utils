reset-base() {
  padding: 0;
  margin: 0;
  font: inherit;
  color: inherit;
  background: transparent;
  border: none;
}

reset-cursor() {
  cursor: pointer;
  user-select: none;
}

reset-layout() {
  //Adds inline-block reset
  position: relative;
  display: inline-block;
  vertical-align: top;
  text-align: center;
  box-sizing: border-box;
  background-clip: padding-box;
}

ellipsis() {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

disabled() {
  opacity: 0.3;
  cursor: default;
  pointer-events: none;
}
