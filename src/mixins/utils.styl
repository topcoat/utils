// Reset

reset-base()
  padding: 0;
  margin: 0;
  font: inherit;
  color: inherit;
  background: transparent;
  border: none;

reset-cursor()
  cursor: pointer;
  user-select: none;

reset-box-model()
  box-sizing: border-box;
  background-clip: padding-box;

inline-block()
  position: relative;
  display: inline-block;
  vertical-align: top;

ellipsis()
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;

disabled()
  opacity: 0.3;
  cursor: default;
  pointer-events: none;

.reset-ui
  reset-box-model()
  inline-block()
  reset-base()
  reset-cursor()
  ellipsis()

// Position

.left
  text-align left

.center
  text-align center

.right
  text-align right

// Layout

.quarter
  width 25%

.half
  width 50%

.three-quarters
  width 75%

.third
  width 33.333%

.two-thirds
  width 66.666%

.full
  width 100%

